{
    "name": "w4d",
    "authors": ["KanzakiKino"],
    "description": "Widgets library for dlang.",
    "copyright": "Copyright Â© 2018, KanzakiKino",
    "license": "LGPL-3.0",
    "platforms": ["posix"],

    "targetType": "staticLibrary",
    "targetName": "w4d",
    "targetPath": "./bin",
    "sourcePaths": ["./src"],
    "stringImportPaths": ["./src","./view"],

    "dependencies": {
        "dyaml": "~>0.7.0-beta.1",
        "g4d": "~>1.4.3",
        "gl3n": "~>1.3.1"
    },
    "subPackages": [
        "./example/calc/",
        "./example/demo/",
        "./example/imgbrowser/"
    ],

    "configurations": [
        {
            "name": "default"
        },
        {
            "name": "unittest",

            "targetType": "executable",
            "mainSourceFile": "./src/test.d",

            "dflags": ["-profile=gc"]
        }
    ]
}
